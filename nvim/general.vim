set nowrap
set encoding=utf-8
set fileencoding=utf-8
set ruler
set mouse=a
set background=dark
set clipboard=unnamedplus
" Tabs
set tabstop=2
set shiftwidth=2
set smarttab
set expandtab
set smartindent
set autoindent
set number
set cursorline
" Misc
set incsearch
set ignorecase
set smartcase
set timeoutlen=500

let g:loaded_python_provider=0
let g:python_host_prog='/usr/bin/python2'
let g:python3_host_prog='/usr/bin/python'

nnoremap <S-Tab> :bnext<CR>

